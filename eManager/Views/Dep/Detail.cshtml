@model eManager.Domain.Deparment

@{
    ViewBag.Title = "Detail";
}

<h2>Detail</h2>

<div>
    <h4>Deparment</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

    </dl>
</div>

@Html.ActionLink("Create an employee", "Create", "Employee", new { DeparmentId=Model.id},null)

<table>
    <thead>
        <tr>
            <th colspan="2">Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Employees)
        {
            <tr>
                <td>item.name</td>
            </tr>
        }
    </tbody>
</table>

